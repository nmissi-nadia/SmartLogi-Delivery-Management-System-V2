pipeline {
    agent any
    environment {
        OAUTH2_OKTA_CLIENT_ID=YcU8uwK1DjZborznma0HgSBNXEvr1ekH
        OAUTH2_OKTA_CLIENT_SECRET=Uz04sD7P50WUrFH5vlhwO4N0qDUjoy4_DDbau2e7SzGlPW0Z2eNdffyEh0OmI3QF
        OAUTH2_OKTA_ISSUER_URI=https://dev-mql2wuicvmlclmlu.us.auth0.com/default
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh """
                    docker build \
                        --build-arg OAUTH2_OKTA_CLIENT_ID=$OAUTH2_OKTA_CLIENT_ID \
                        --build-arg OAUTH2_OKTA_CLIENT_SECRET=$OAUTH2_OKTA_CLIENT_SECRET \
                        --build-arg OAUTH2_OKTA_ISSUER_URI=$OAUTH2_OKTA_ISSUER_URI \
                        --build-arg APP_FRONTEND_BASE_URL=$APP_FRONTEND_BASE_URL \
                        --build-arg APP_JWT_SECRET=$APP_JWT_SECRET \
                        -t smartlogi-app:latest .
                """
            }
        }
        stage('Run Docker Container') {
            steps {
                sh 'docker rm -f smartlogi-app || true'
                sh """
                    docker run -d --name smartlogi-app -p 8084:8084 \
                        -e OAUTH2_OKTA_CLIENT_ID=$OAUTH2_OKTA_CLIENT_ID \
                        -e OAUTH2_OKTA_CLIENT_SECRET=$OAUTH2_OKTA_CLIENT_SECRET \
                        -e OAUTH2_OKTA_ISSUER_URI=$OAUTH2_OKTA_ISSUER_URI \
                        -e APP_FRONTEND_BASE_URL=$APP_FRONTEND_BASE_URL \
                        -e APP_JWT_SECRET=$APP_JWT_SECRET \
                        smartlogi-app:latest
                """
            }
        }
    }
}
